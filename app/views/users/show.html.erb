<div id="gravatar"><%= gravatar_for @user %></div>
<h3 id="username"><%= @user.username %></h3><br><br>
<h3 id="created">Created: </h3>
<span><%= time_ago_in_words(@user.created_at) %> ago</span>
<h3>Articles:</h3>
<% @user.articles.each do |article| %>
    <%= link_to article.title, article.url %><br>
<% end %>
<h3>Comments:</h3>
<% @user.comments.each do |comment| %>
    On <%= link_to comment.article.title, comment.article.url %><br>
    <%= comment.text %><br><br>
<% end %>